class Solution {
public:
    int totalFruit(vector<int>& fruits) {
        unordered_map<int,int>basket;
        int start=0,maxfruits=0;
        for(int i=0;i<fruits.size();i++)
        {
            basket[fruits[i]]++;
            while(basket.size()>2)
            {
                basket[fruits[start]]--;
                if(basket[fruits[start]]==0)
                    basket.erase(fruits[start]);
                start++;
            }
            maxfruits=max(maxfruits,i-start+1);
        }
        return maxfruits;
    }
};
