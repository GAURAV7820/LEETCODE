class Solution {
public:
    vector<vector<int>> minimumAbsDifference(vector<int>& arr) {
        vector<vector<int>>ans;
        sort(arr.begin(),arr.end());
        int mindiff=2e6;
        for(int i=0;i<arr.size()-1;i++)
        {
            int diff=arr[i+1]-arr[i];
            if(mindiff>diff)
            {
                mindiff=diff;
                ans.clear();
                ans.push_back({arr[i],arr[i+1]});
            }
            else if(mindiff==diff)
                ans.push_back({arr[i],arr[i+1]});
        }
        return ans;
    }
};
