class Solution {
public:
    bool isMonotonic(vector<int>& nums) {
          int i=0;
          if(nums[i]<=nums[nums.size()-1])
            {
                for(int i=0;i<nums.size()-1;i++)
                {
                    if(nums[i]>nums[i+1])
                        return false;
                }
                return true;
            }
            else if(nums[i]>nums[nums.size()-1])
            {
                for(int i=0;i<nums.size()-1;i++)
                {
                    if(nums[i]<nums[i+1])
                        return false;
                }
                return true;
            }
            return true;
    }
};
