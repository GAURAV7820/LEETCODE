class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {   
       long long res=0,count=0;
        for(int n:nums)
        {
            if(n==0)
            {
                count++;
                res+=count;
            }
            else
                count=0;
        }
        return res;
    }
    
};
